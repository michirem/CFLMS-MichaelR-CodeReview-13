{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="background-image: url('{{ event.image }}'); height: 50vh; background-size: cover; background-repeat: no-repeat; background-position: 50% 50%;">
</div>
<div class="container">
    <h2 class="text-center">Are you sure you want to delete this Event?</h2>
    <div class="d-flex justify-content-center">
        <div class="card col-6 my-2" style="width: 18rem;">
            <img src="{{ event.image }}" class="card-img-top" alt="{{ event.name }} picture">
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">Location: {{ event.location }}</p>
                <p class="card-text">City: {{ event.city }}</p>
                <p class="card-text">Date / Time: {{ event.datetime ? event.datetime|date('Y-m-d H:i:s') : '' }}</p>
                <p class="card-text">Homepage: <a href="{{ event.url }}">{{ event.url }}</a></p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        {{ include('events/_delete_form.html.twig') }}
        <a class="btn btn-danger m-2" href="/">No</a>
    </div>
</div>
{% endblock %}